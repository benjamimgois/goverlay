<?xml version="1.0" encoding="UTF-8" ?>
<component type="desktop-application">
    <id>io.github.benjamimgois.goverlay</id>

    <name>Goverlay</name>
    <summary>Easily configure MangoHud, vkBasalt and OptiScaler</summary>
    <developer id="io.github.benjamimgois">
        <name>Benjamim Gois</name>
    </developer>

    <url type="homepage">https://github.com/benjamimgois/goverlay</url>
    <url type="bugtracker">https://github.com/benjamimgois/goverlay/issues</url>

    <metadata_license>CC0-1.0</metadata_license>
    <project_license>GPL-3.0</project_license>

    <description>
        <p>
            Goverlay is an easy graphical interface to configure MangoHud, vkBasalt, and OptiScaler. Goverlay helps Linux gamers get the most out of their systems by providing an easy-to-use graphical interface to configure MangoHud, vkBasalt, and OptiScaler. Whether you're looking for performance monitoring, visual enhancements, or smarter upscaling, Goverlay makes everything accessible in just a few clicks.
        </p>
    </description>

    <launchable type="desktop-id">io.github.benjamimgois.goverlay.desktop</launchable>

    <branding>
        <color type="primary" scheme_preference="light">#ff00ff</color>
        <color type="primary" scheme_preference="dark">#993d3d</color>
    </branding>

